$c = $color
$cb = $background-color
$d = $depth
$dn = ca($d, '* -1')
$g = $gap
$gn = ca($g, '* -1')
$g2 = ca($g, '* 2')
$g4 = ca($g, '* 4')

$background-color = v('background-color', white)
$color = v('color', black)
$depth = v('depth', 2px)
$gap = v('gap', 10px)

ca(a, opAndBString)
  unquote('calc(%s %s)' % (a unquote(opAndBString)))

cab(a, opString, b)
  unquote('calc(%s %s %s)' % (a unquote(opString) b))

v(name, val)
  var(unquote('--bois-' + name), val)
